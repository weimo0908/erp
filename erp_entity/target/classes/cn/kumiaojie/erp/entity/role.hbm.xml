<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
 


<hibernate-mapping>
	<class name="cn.kumiaojie.erp.entity.Role" table="role">
		<id name="uuid">
			<generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
				<param name="sequence_name">ROLE_SEQ</param>
			</generator>
		</id>
		<property name="name"/>
		
		<!-- 配置多对多关系,中间表:role_munu -->
		<bag name="menus" order-by="menuuuid" table="role_menu">
			<key column="roleuuid"></key>
			<many-to-many class="cn.kumiaojie.erp.entity.Menu" column="menuuuid"></many-to-many>
		</bag>
		
		<!-- 反查,角色下有那些用户,这些用户都拥有这个角色 -->		
		<bag name="emps" order-by="empuuid" table="emp_role">
			<key column="roleuuid"></key>
			<many-to-many class="cn.kumiaojie.erp.entity.Emp" column="empuuid"></many-to-many>
		</bag>
		
	</class>
</hibernate-mapping>
